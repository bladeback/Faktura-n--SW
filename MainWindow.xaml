<Window x:Class="InvoiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvoiceApp"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

        <Window.Resources>
                <!-- Styl POUZE pro levé menu, aby nepřebíral globální Button styly -->
                <Style x:Key="NavButtonStyle"
                                TargetType="Button"
                                BasedOn="{x:Null}">
                        <Setter Property="Foreground"
                                        Value="#E5E7EB"/>
                        <Setter Property="Background"
                                        Value="#334155"/>
                        <Setter Property="HorizontalContentAlignment"
                                        Value="Left"/>
                        <Setter Property="Padding"
                                        Value="14,10"/>
                        <Setter Property="Margin"
                                        Value="0,6,0,0"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="FontWeight"
                                        Value="SemiBold"/>
                        <Setter Property="Cursor"
                                        Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="8">
                                                        <ContentPresenter Margin="8,0"
                                                                        VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                        Value="True">
                                                                <Setter Property="Background"
                                                                                Value="#475569"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed"
                                                                        Value="True">
                                                                <Setter Property="Background"
                                                                                Value="#1E3A8A"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled"
                                                                        Value="False">
                                                                <Setter Property="Background"
                                                                                Value="#374151"/>
                                                                <Setter Property="Foreground"
                                                                                Value="#9CA3AF"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- „Aktivní“ varianta pro vybranou stránku -->
                <Style x:Key="NavButtonActiveStyle"
                                TargetType="Button"
                                BasedOn="{StaticResource NavButtonStyle}">
                        <Setter Property="Background"
                                        Value="#2563EB"/>
                        <Setter Property="Foreground"
                                        Value="White"/>
                </Style>
        </Window.Resources>

        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Levé menu -->
                <Border Grid.Column="0"
                                Background="#0F172A"
                                Padding="12">
                        <StackPanel>
                                <TextBlock Text="Navigace"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="4,0,0,16"/>

                                <!-- Výchozí aktivní: Dodavatelé -->
                                <Button x:Name="NavInvoices"
                                        Content="Faktury"
                                        Click="Invoices_Click"
                                        Style="{StaticResource NavButtonStyle}"/>

                                <Button x:Name="NavOrders"
                                        Content="Objednávky"
                                        Click="Orders_Click"
                                        Style="{StaticResource NavButtonStyle}"/>

                                <Button x:Name="NavSuppliers"
                                        Content="Dodavatelé"
                                        Click="Suppliers_Click"
                                        Style="{StaticResource NavButtonActiveStyle}"/>

                                <Button x:Name="NavCustomers"
                                        Content="Odběratelé"
                                        Click="Customers_Click"
                                        Style="{StaticResource NavButtonStyle}"/>

                                <Button x:Name="NavSettings"
                                        Content="Nastavení"
                                        Click="Settings_Click"
                                        Style="{StaticResource NavButtonStyle}"/>
                        </StackPanel>
                </Border>

                <!-- Obsah -->
                <ContentControl x:Name="ContentHost"
                                Grid.Column="1"
                                Margin="16"/>
        </Grid>
</Window>
