<Window x:Class="InvoiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InvoiceApp.ViewModels"
        Title="InvoiceApp"
        Height="760"
        Width="1180">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- jednotný styl pro štítky -->
        <Style x:Key="FormLabel"
                TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Margin"
                    Value="0,2,8,2"/>
            <Setter Property="Foreground"
                    Value="#444"/>
        </Style>
        <!-- jednotný styl pro textboxy -->
        <Style x:Key="FormInput"
                TargetType="TextBox">
            <Setter Property="Margin"
                    Value="0,2,0,2"/>
            <Setter Property="Padding"
                    Value="6,4"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin"
                    Value="0,10,0,0"/>
            <Setter Property="Padding"
                    Value="8"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Nová faktura"
                    Command="{Binding NewInvoiceCommand}"/>
            <Button Content="Nová objednávka"
                    Command="{Binding NewOrderCommand}"
                    Margin="6,0,0,0"/>
            <Separator/>
            <Button Content="Přidat položku"
                    Command="{Binding AddItemCommand}"/>
            <Button Content="Export do PDF"
                    Command="{Binding ExportPdfCommand}"
                    Margin="6,0,0,0"/>
        </ToolBar>

        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEVÝ SLOUPEC -->
            <StackPanel Grid.Column="0"
                    Margin="0,0,12,0">

                <!-- Doklad -->
                <GroupBox Header="Doklad">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Typ:"
                                Style="{StaticResource FormLabel}"/>
                        <ComboBox   Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,2,0,2"
                                    SelectedValue="{Binding Current.Type}">
                            <ComboBoxItem Content="Faktura"/>
                            <ComboBoxItem Content="Objednávka"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Číslo:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox    Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Current.Number}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="Vystaveno:"
                                Style="{StaticResource FormLabel}"/>
                        <DatePicker Grid.Row="2"
                                Grid.Column="1"
                                SelectedDate="{Binding Current.IssueDate}"
                                Margin="0,2,0,2"/>

                        <TextBlock Grid.Row="3"
                                Grid.Column="0"
                                Text="Splatnost:"
                                Style="{StaticResource FormLabel}"/>
                        <DatePicker Grid.Row="3"
                                Grid.Column="1"
                                SelectedDate="{Binding Current.DueDate}"
                                Margin="0,2,0,2"/>
                    </Grid>
                </GroupBox>

                <!-- Dodavatel -->
                <GroupBox Header="Dodavatel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Název -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ulice -->
                            <RowDefinition Height="Auto"/>
                            <!-- Město/PSČ -->
                            <RowDefinition Height="Auto"/>
                            <!-- IČO -->
                            <RowDefinition Height="Auto"/>
                            <!-- DIČ -->
                            <RowDefinition Height="Auto"/>
                            <!-- Banka -->
                            <RowDefinition Height="Auto"/>
                            <!-- IBAN -->
                            <RowDefinition Height="Auto"/>
                            <!-- E-mail -->
                            <RowDefinition Height="Auto"/>
                            <!-- Telefon -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Název:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.Name}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Ulice a č.p.:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.Address}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="PSČ a obec:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.City}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="3"
                                Grid.Column="0"
                                Text="IČO:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="3"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.ICO}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="4"
                                Grid.Column="0"
                                Text="DIČ:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.DIC}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="5"
                                Grid.Column="0"
                                Text="Banka:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="5"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.Bank}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="6"
                                Grid.Column="0"
                                Text="IBAN:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="6"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.IBAN}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="7"
                                Grid.Column="0"
                                Text="E-mail:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="7"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.Email}"
                                Style="{StaticResource FormInput}"/>

                        <TextBlock Grid.Row="8"
                                Grid.Column="0"
                                Text="Telefon:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="8"
                                Grid.Column="1"
                                Text="{Binding Current.Supplier.Phone}"
                                Style="{StaticResource FormInput}"/>
                    </Grid>
                </GroupBox>

                <!-- Odběratel -->
                <GroupBox Header="Odběratel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Název -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ulice -->
                            <RowDefinition Height="Auto"/>
                            <!-- Město/PSČ -->
                            <RowDefinition Height="Auto"/>
                            <!-- IČO + tlačítko -->
                            <RowDefinition Height="Auto"/>
                            <!-- DIČ -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Název:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Current.Customer.Name}"
                                Style="{StaticResource FormInput}"
                                Grid.ColumnSpan="2"/>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Ulice a č.p.:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Current.Customer.Address}"
                                Style="{StaticResource FormInput}"
                                Grid.ColumnSpan="2"/>

                        <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="PSČ a obec:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding Current.Customer.City}"
                                Style="{StaticResource FormInput}"
                                Grid.ColumnSpan="2"/>

                        <TextBlock Grid.Row="3"
                                Grid.Column="0"
                                Text="IČO:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="3"
                                Grid.Column="1"
                                   Text="{Binding Current.Customer.ICO, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource FormInput}"
                                MinWidth="160"/>
                        <Button    Grid.Row="3"
                                Grid.Column="2"
                                Content="Načíst z ARES"
                                Margin="8,2,0,2"
                                   Command="{Binding LoadCustomerFromIcoCommand}"/>

                        <TextBlock Grid.Row="4"
                                Grid.Column="0"
                                Text="DIČ:"
                                Style="{StaticResource FormLabel}"/>
                        <TextBox   Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding Current.Customer.DIC}"
                                Style="{StaticResource FormInput}"
                                Grid.ColumnSpan="2"/>
                    </Grid>
                </GroupBox>

                <!-- spodní drobnosti -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                            Text="VS:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Column="1"
                            Text="{Binding Current.VariableSymbol}"
                            Style="{StaticResource FormInput}"
                            Width="160"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                            Text="Měna:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Column="1"
                            Text="{Binding Current.Currency}"
                            Style="{StaticResource FormInput}"
                            Width="90"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                            Text="Poznámka:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Column="1"
                            Text="{Binding Current.Notes}"
                            Style="{StaticResource FormInput}"
                            Height="70"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"/>
                </Grid>

            </StackPanel>

            <!-- PRAVÝ SLOUPEC -->
            <DockPanel Grid.Column="1">
                <DataGrid ItemsSource="{Binding Items}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                          DockPanel.Dock="Top"
                        Height="520"
                        Margin="0,0,0,8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Položka"
                                Binding="{Binding Name}"
                                Width="*"/>
                        <DataGridTextColumn Header="Mj"
                                Binding="{Binding Unit}"
                                Width="60"/>
                        <DataGridTextColumn Header="Množství"
                                Binding="{Binding Quantity}"
                                Width="100"/>
                        <DataGridTextColumn Header="Cena/ks"
                                Binding="{Binding UnitPrice}"
                                Width="110"/>
                        <DataGridTextColumn Header="DPH (%)"
                                Binding="{Binding VatRate}"
                                Width="100"/>
                        <DataGridTemplateColumn Header=""
                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding DataContext.RemoveSelectedCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <TextBlock Text="Celkem:"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Current.Total}"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Current.Currency}"
                            FontWeight="Bold"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
