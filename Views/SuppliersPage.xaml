<UserControl x:Class="InvoiceApp.Views.SuppliersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                Grid.Row="0"
                Margin="0,0,0,10">
            <TextBlock Text="Dodavatelé"
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="0,0,12,0"/>
            <Button Content="Přidat dodavatele"
                    IsEnabled="False"/>
        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <TextBlock Opacity="0.7"
                       Text="Placeholder. Teď jen přepínání. V dalším kroku dodáme seznam + Přidat/Upravit/Smazat + JSON úložiště."/>
        </Border>
    </Grid>
</UserControl>
