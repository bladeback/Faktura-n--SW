<UserControl x:Class="InvoiceApp.Views.SuppliersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:InvoiceApp.Models">
    <UserControl.Resources>
        <!-- Watermark pro TextBox: text se bere z vlastnosti Tag -->
        <Style x:Key="WatermarkTextBox"
               TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="#9AA0A6"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- zobraz watermark jen když je prázdno a textbox není ve fokusu -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text"
                                               Value=""/>
                                    <Condition Property="IsKeyboardFocused"
                                               Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel s vyhledáváním a akcemi -->
        <DockPanel Grid.Row="0"
                   LastChildFill="False"
                   Margin="0,0,0,12">
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Hledat (název, IČO)…"
                     Width="220"
                     Height="28"
                     DockPanel.Dock="Left"
                     Margin="0,0,12,0"
                     TextChanged="SearchBox_TextChanged"/>


            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">
                <Button Content="Přidat"
                        Width="90"
                        Margin="0,0,8,0"
                        Click="Add_Click"/>
                <Button Content="Smazat vybrané"
                        Width="120"
                        Margin="0,0,8,0"
                        Click="Delete_Click"/>
                <Button Content="Uložit"
                        Width="90"
                        Click="Save_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- GRID DODAVATELŮ -->
        <DataGrid x:Name="SuppliersGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Suppliers, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="28"
                  EnableRowVirtualization="True"
                  RowEditEnding="SuppliersGrid_RowEditEnding"
                  HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  Margin="0,8,0,0">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Název"
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="160"
                                    Width="2*"/>
                <DataGridTextColumn Header="Ulice a č.p."
                                    Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="160"
                                    Width="2*"/>
                <DataGridTextColumn Header="Město"
                                    Binding="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="120"
                                    Width="*"/>
                <DataGridTextColumn Header="PSČ"
                                    Binding="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="80"
                                    Width="90"/>
                <DataGridTextColumn Header="IČO"
                                    Binding="{Binding ICO, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="90"
                                    Width="100"/>
                <DataGridTextColumn Header="DIČ"
                                    Binding="{Binding DIC, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="110"
                                    Width="120"/>
                <DataGridTextColumn Header="Banka"
                                    Binding="{Binding Bank, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="140"
                                    Width="160"/>
                <DataGridTextColumn Header="Účet"
                                    Binding="{Binding AccountNumber, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="140"
                                    Width="160"/>
                <DataGridTextColumn Header="IBAN"
                                    Binding="{Binding IBAN, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="180"
                                    Width="200"/>
                <DataGridTextColumn Header="E-mail"
                                    Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="160"
                                    Width="180"/>
                <DataGridTextColumn Header="Telefon"
                                    Binding="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="120"
                                    Width="140"/>
                <DataGridCheckBoxColumn Header="Plátce DPH"
                                        Binding="{Binding IsVatPayer, UpdateSourceTrigger=PropertyChanged}"
                                        MinWidth="110"
                                        Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
