<Window x:Class="InvoiceApp.Views.SupplierEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodavatel"
        Height="640"
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="520"
        MinWidth="520"
        Background="{StaticResource Brush.Surface}">
    <DockPanel>

        <!-- akční tlačítka dole -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="16,12">
            <Button Content="OK"
                    Width="120"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="Ok_Click"
                    Style="{StaticResource PrimaryButton}"/>
            <Button Content="Zrušit"
                    Width="120"
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <!-- formulář -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource GroupCard}"
                    Margin="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Název -->
                    <TextBlock Grid.Row="0"
                            Grid.Column="0"
                            Text="Název:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="0"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Ulice a č.p. -->
                    <TextBlock Grid.Row="1"
                            Grid.Column="0"
                            Text="Ulice a č.p.:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="1"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.Address, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Město -->
                    <TextBlock Grid.Row="2"
                            Grid.Column="0"
                            Text="Město:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="2"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.City, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- PSČ -->
                    <TextBlock Grid.Row="3"
                            Grid.Column="0"
                            Text="PSČ:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="3"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.PostalCode, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- IČO + ARES -->
                    <TextBlock Grid.Row="4"
                            Grid.Column="0"
                            Text="IČO:"
                            Style="{StaticResource FormLabel}"/>
                    <Grid Grid.Row="4"
                            Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Style="{StaticResource FormTextBox}"
                                 Text="{Binding Editable.ICO, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Grid.Column="1"
                                Margin="8,0,0,0"
                                Content="Načíst z ARES"
                                Click="LoadFromAres_Click"
                                Style="{StaticResource PrimaryButton}"/>
                    </Grid>

                    <!-- DIČ -->
                    <TextBlock Grid.Row="5"
                            Grid.Column="0"
                            Text="DIČ:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="5"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               TextChanged="Dic_TextChanged"
                               Text="{Binding Editable.DIC, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Účet -->
                    <TextBlock Grid.Row="6"
                            Grid.Column="0"
                            Text="Účet:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="6"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.AccountNumber, UpdateSourceTrigger=PropertyChanged}"
                               TextChanged="Account_TextChanged"
                               LostFocus="Account_LostFocus"/>

                    <!-- Banka -->
                    <TextBlock Grid.Row="7"
                            Grid.Column="0"
                            Text="Banka:"
                            Style="{StaticResource FormLabel}"/>
                    <ComboBox  Grid.Row="7"
                            Grid.Column="1"
                               Style="{StaticResource FormComboBox}"
                               ItemsSource="{Binding Banks}"
                               SelectedItem="{Binding SelectedBank, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                  <Run Text="{Binding Name}"/>
                  <Run Text=" ("/>
                  <Run Text="{Binding Code}"/>
                  <Run Text=")"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- IBAN (read-only, s konvertorem pro zobrazení po 4) -->
                    <TextBlock Grid.Row="8"
                            Grid.Column="0"
                            Text="IBAN:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="8"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               IsReadOnly="True"
                               Text="{Binding Editable.IBAN, Converter={StaticResource IbanDisplay}}"/>

                    <!-- E-mail -->
                    <TextBlock Grid.Row="9"
                            Grid.Column="0"
                            Text="E-mail:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="9"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.Email, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Telefon -->
                    <TextBlock Grid.Row="10"
                            Grid.Column="0"
                            Text="Telefon:"
                            Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="10"
                            Grid.Column="1"
                               Style="{StaticResource FormTextBox}"
                               Text="{Binding Editable.Phone, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Plátce DPH -->
                    <TextBlock Grid.Row="11"
                            Grid.Column="0"
                            Text=""/>
                    <CheckBox  Grid.Row="11"
                            Grid.Column="1"
                               Style="{StaticResource FormCheckBox}"
                               Content="Plátce DPH"
                               IsChecked="{Binding Editable.IsVatPayer}"/>
                </Grid>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>
